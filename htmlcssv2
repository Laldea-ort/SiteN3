.texto-animado.hidden {
    /* Opacidade 0 para o texto começar invisível */
    opacity: 0;
    /* Mova o texto para baixo, preparando para a animação de "subir" */
    transform: translateY(20px); 
    /* Adicione a transição para animar suavemente a mudança */
    transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  }
  
  .texto-animado.show {
    /* Opacidade 1 para o texto ficar visível */
    opacity: 1;
    /* Mova o texto para a posição original */
    transform: translateY(0);
  }
